<div class="text-center">
  <h2>Sign up</h2>

  <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), class: 'form-signin') do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= render 'layouts/omni_auth_logins' %>

    <div class="form-floating">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      <%= f.label :email %>
    </div>

    <div class="form-floating">
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
      <%= f.label "Password (#{@minimum_password_length} characters minimum)" %>
    </div>

    <div class="form-floating">
      <%= f.password_field :password_confirmation, autocomplete: "current-password", class: 'form-control' %>
      <%= f.label :password_confirmation %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: 'btn btn-primary w-100' %>
    </div>
  <% end %>

  <div class="my-2">
    <%= render "devise/shared/links" %>
  </div>
</div>
