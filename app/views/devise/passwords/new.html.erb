<div class="text-center">
  <h2>Forgot your password?</h2>

  <%= form_with(model: resource, as: resource_name, url: password_path(resource_name), class: 'form-signin', method: :post) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= render 'layouts/omni_auth_logins' %>

    <div class="form-floating">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      <%= f.label :email %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: 'btn btn-primary w-100' %>
    </div>
  <% end %>

  <div class="my-2">
    <%= render "devise/shared/links" %>
  </div>
</div>
