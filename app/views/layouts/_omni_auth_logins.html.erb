<% if devise_mapping.omniauthable? %>
  <% resource_class.omniauth_providers.each do |provider| %>
    <% if provider == :shibboleth %>
      <%= link_to omniauth_authorize_path(resource_name, provider), method: :post, class: 'btn btn-outline-secondary my-2 w-100' do %>
        <%= image_tag 'stanford_s.svg', width: '24px', height: '24px' %>
        Stanford users sign in with SUNet ID
      <% end %>
    <% else %>
      <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), method: :post %><br />
    <% end %>
  <% end %>
<% end %>
