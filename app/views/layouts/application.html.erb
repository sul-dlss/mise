<!DOCTYPE html>
<html>
  <head>
    <%= title site: 'Mise', separator: '|' %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body data-controller='show-modal'>
    <%= render 'layouts/navbar' %>
    <div class="main-content <%= 'with-sidebar' if content_for?(:sidebar) %>">
      <% if content_for?(:sidebar) %>
        <aside class='bg-white'>
          <%= content_for(:sidebar) %>
        </aside>
      <% end %>

      <main class='col py-4 pe-4'>
        <%= render 'layouts/flash_messages' %>

        <%= content_for(:top_level_nav) if content_for?(:top_level_nav) %>

        <%= content_for?(:content) ? yield(:content) : yield %>
      </main>
    </div>
    <div class="modal fade" id="duplicateWorkspaceModal" tabindex="-1" aria-labelledby="duplicateWorkspaceModalLabel" aria-hidden="true">
      <div class="modal-dialog" tabindex="-1">
        <div class="modal-content">
          <div class="modal-header text-body bg-light">
            <h5 class="modal-title h4" id="duplicateWorkspaceModalLabel">Duplicate workspace</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div id="duplicateWorkspaceModalBodyAndFooter"></div>
        </div>
      </div>
    </div>
    <div class="modal fade" id="moveWorkspaceModal" tabindex="-1" aria-labelledby="moveWorkspaceModalLabel" aria-hidden="true">
      <div class="modal-dialog" tabindex="-1">
        <div class="modal-content">
          <div class="modal-header text-body bg-light">
            <h5 class="modal-title h4" id="moveWorkspaceModalLabel">Move workspace</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div id="moveWorkspaceModalBodyAndFooter"></div>
        </div>
      </div>
    </div>
  </body>
</html>
