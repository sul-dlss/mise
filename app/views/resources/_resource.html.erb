<div class="card">
  <div class="card-body d-flex justify-space-between">
    <div class="fs-5 me-2">
      <% case resource.resource_type %>
      <% when 'folder' %>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-collection" viewBox="0 0 16 16">
          <path d="M2.5 3.5a.5.5 0 0 1 0-1h11a.5.5 0 0 1 0 1h-11zm2-2a.5.5 0 0 1 0-1h7a.5.5 0 0 1 0 1h-7zM0 13a1.5 1.5 0 0 0 1.5 1.5h13A1.5 1.5 0 0 0 16 13V6a1.5 1.5 0 0 0-1.5-1.5h-13A1.5 1.5 0 0 0 0 6v7zm1.5.5A.5.5 0 0 1 1 13V6a.5.5 0 0 1 .5-.5h13a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-.5.5h-13z"/>
        </svg>
      <% when 'workspace' %>
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-columns" viewBox="0 0 16 16">
        <path d="M0 2a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1V2zm8.5 0v8H15V2H8.5zm0 9v3H15v-3H8.5zm-1-9H1v3h6.5V2zM1 14h6.5V6H1v8z"/>
      </svg>
      <% end %>
    </div>
    <h2 class="fs-4 card-title me-auto mb-0"><%= link_to resource.title, resource %></h2>

    <div>
      <%= link_to 'Edit', edit_resource_path(resource), class: 'btn btn-secondary' %>
      <%= link_to 'Destroy', resource, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
</div>
