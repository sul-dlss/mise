<% content_for(:sidebar) do %>
  <%= render 'sidebar' %>
<% end %>

<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @resource.title %>
</p>

<p>
  <strong>Url:</strong>
  <%= @resource.url %>
</p>

<p>
  <strong>Resource type:</strong>
  <%= @resource.resource_type %>
</p>

<%= link_to 'Edit', edit_resource_path(@resource) %> |
<%= link_to 'Back', @resource.parent.present? ? @resource.parent : resources_path %>

<%= render 'resource_list', resources: @resource.children %>
<%= link_to 'New Resource', new_contained_resource_path(@resource) %>
